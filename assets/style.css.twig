{% if settings.use_bg_image %}
  {% if 'tiled' in settings.bg_alignment %}
    body {
      background: url({{ settings['bg.jpg'] }}) 0 0 repeat;
    }
  {% elseif 'fill' in settings.bg_alignment %}
    body {
      background: url({{ settings['bg.jpg'] }}) 0 0 no-repeat fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      -webkit-backface-visibility: visible !important;
    }
  {% endif %}
  {% if 'contained' in settings.bg_alignment %}
    .body-container {
      background-color: {{ settings.shop_bg_color }};
      border-left: 15px solid {{ settings.shop_bg_color }};
      border-right: 15px solid {{ settings.shop_bg_color }};
    }
  {% endif %}
{% endif %}

