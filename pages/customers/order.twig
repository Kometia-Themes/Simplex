{% extends 'layout.twig' %}

{% block body %}
<div class="row">
  <div class="col-sm-12">
    <h1 class="section-title section-title--margin">Orden #{{ order.number }}</h1>
    <p>Referencia: {{ order.id }}</p>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-6">
    <h4>Dirección de envío</h4>
    <p>{{ order.shipping_first_name ~ ' ' ~ order.shipping_last_name }} {{ order.shipping_full_name }}</p>
    <p>{{ order.shipping_address1 }}</p>
    <p>{{ order.shipping_address2 }}</p>
    <p>{{ order.shipping_company }}</p>
    <p>{{ order.shipping_country }}</p>
    <p>{{ order.shipping_state }}</p>
    <p>{{ order.shipping_postcode }}</p>
    <p>{{ order.shipping_phone }}</p>
  </div>
  <div class="col-md-6">
    <h4>Dirección de pago</h4>
    <p>{{ order.billing_first_name ~ ' ' ~ order.billing_last_name }} {{ order.billing_full_name }}</p>
    <p>{{ order.billing_address1 }}</p>
    <p>{{ order.billing_address2 }}</p>
    <p>{{ order.billing_company }}</p>
    <p>{{ order.billing_country }}</p>
    <p>{{ order.billing_state }}</p>
    <p>{{ order.billing_postcode }}</p>
    <p>{{ order.billing_phone }}</p>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th class="text-center">Cantidad</th>
              <th class="text-right">Precio</th>
            </tr>
          </thead>
          <tbody>
          {% for item in order.items %}
            <tr>
              <td>
                <a href="/productos/{{ item.permalink }}">
                  {{ item.name }}
                </a>
              </td>
              <td class="text-center">{{ item.quantity }}</td>
              <td class="text-right">{{ item.price | money('symbol', 'code') }}</td>
            </tr>
          {% endfor %}
          </tbody>
          <tfoot>
            <tr>
              <td class="text-right" colspan="2">Estado: <strong>{{ order.financial_status_label }}</strong></td>
              <td class="text-right" >Total: {{ order.total_price | money('symbol', 'code') }}</td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <p><a href="/cuenta">Regresar</a></p>
  </div>
</div>
{% endblock %}
