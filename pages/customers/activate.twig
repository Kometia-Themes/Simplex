{% extends 'layout.twig' %}

{% block body %}
<div class="row">
  <div class="col-sm-12">
    <h1 class="section-title section-title--margin">Activar cuenta</h1>
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col-md-6">
    {% form 'customer_activate' 'role="form"' %}
      <div class="form-group">
        <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Nueva Contraseña" required>
      </div>
      <div class="form-group">
        <input type="password" class="form-control input-lg" id="password_confirmation" name="password_confirmation" placeholder="Confirmar Contraseña" required>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-lg btn-action">Activar cuenta</button>
      </div>
      <input type="hidden" name="token" value="{{ token }}">
      <input type="hidden" name="email" value="{{ email }}">
    {% endform %}
  </div>
</div>
{% endblock %}
