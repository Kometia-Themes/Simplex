{% extends 'layout.twig' %}

{% block body %}
<div class="row">
  <div class="col-sm-12">
    <h1 class="section-title">{{ page.title }}</h1>
    {{ page.content }}
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col-md-6">
    {% form 'contact' 'role="form"' %}
      <div class="form-group">
        <label for="name">Nombre</label>
        <input type="text" class="form-control" name="message[content][nombre]" id="name">
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="message[email]" id="email">
      </div>

      <div class="form-group">
        <label for="phone">Tel√©fono</label>
        <input type="text" class="form-control" name="message[content][telefono]" id="phone">
      </div>

      <div class="form-group">
        <label for="message">Mensaje</label>
        <textarea class="form-control" name="message[content][mensaje]" id="message"></textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-lg btn-action">Enviar</button>
      </div>
    {% endform %}
  </div>
</div>
{% endblock %}
