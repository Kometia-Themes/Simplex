<div class="header__bar">
  <div class="container">
    <div class="row">
      <div class="col-xs-4 hidden-xs hidden-sm">
        {% if settings.display_search %}
        <form action="/buscar" method="get">
          <div class="search">
            <input type="text" placeholder="Buscar" name="q">
            <button type="submit" class="mdi mdi-magnify"></button>
          </div>
        </form>
        {% endif %}
      </div>
      <div class="col-md-4 text-center">
        {% if settings.display_message_bar %}
        <span class="header__bar__message">{{ settings.message_bar }}</span>
        {% endif %}
      </div>
      <div class="col-sm-4 text-right hidden-xs hidden-sm">
        <ul class="list-inline head-options">
          {% if store.customer_accounts_enabled_or_optional %}
          {% if customer %}
          <li>
            <a href="/cuenta" class="header__bar__link">
              <i class="mdi mdi-lock"></i> Cuenta
            </a>
          </li>
          {% else %}
          <li>
            <a href="/cuenta/login" class="header__bar__link">
              <i class="mdi mdi-lock"></i> Ingresar
            </a>
          </li>
          <li>
            <a href="/cuenta/registro" class="header__bar__link">
              <i class="mdi mdi-account"></i> Crear cuenta
            </a>
          </li>
          {% endif %}
          {% endif %}
          <li>
            <a href="/carrito" class="header__bar__link">
              <i class="mdi mdi-cart"><sup>{{ cart.total_items }}</sup></i> Carrito
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
